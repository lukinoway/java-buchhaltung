<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="1000.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="konto.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#loadCSVFile" text="lade CSV" />
              <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Close" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Auswertung">
              <items>
                <MenuItem mnemonicParsing="false" text="Monatsbericht" />
                  <MenuItem mnemonicParsing="false" text="Monatsstatistik" />
                  <MenuItem mnemonicParsing="false" text="Jahresbericht" />
                  <MenuItem mnemonicParsing="false" text="Jahresstatistik" />
                  <MenuItem mnemonicParsing="false" text="Gesamtauswertung" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
